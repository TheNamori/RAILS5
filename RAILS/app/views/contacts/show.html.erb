<!doctype html>
<html lang="pt-BR">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
  </head>
  <body class="container-fluid table-fluid table-dark">
      <div class= "p-3 mb-2 bg-dark border-bottom"> <h1><%= t 'New Contact'%></h1>
        <span>Favor preencher os dados do contato</span>
      </div> 

      <%= form_with model: @contact do |form| %>
        <div class="form-row m-3 justify-content-md-left">
          
          <div class="form-group col-md-3">
            <%= form.label :name %>
            <%= form.label @contact.name, class: "form-control"%>
          </div>
          
          <div class="form-group col-md-3">
            <%= form.label :email%>
            <%= form.label @contact.email, class: "form-control"%>
          </div>

        </div>

        <div class="form-row m-3 justify-content-md-left">
          <div class="form-group col-md-2">
            <%= form.label :kind %>
            <%= form.label @contact.kind_id, class: "form-control"%>
          </div>
        </div>
          
        <div class="row m-2 col-6 justify-content-md-left">
          <%= form.label :rmk %>
          <div class="form-group bg-light text-dark rounded">
          <%= @contact.rmk %>
          </div>
        </div>

        <% end %>
    </div>
  </body>
</html>
